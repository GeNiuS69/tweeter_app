<%= image_tag("rails.png") %>
<%= link_to "New tweet", new_tweet_path %>
<%= link_to "Popular", popular_tweets_path %>
<table>
  <% @tweets.each do |tweet| %>
    <tr>
      <td>
        <%= link_to tweet.message, tweet_path(tweet) %>
      </td>
      <td>
        <%= tweet.counter %>
      </td>
      <td>
        <%= tweet.likes %>
      </td>
      <td>
        <%= link_to "Delete", tweet_path(tweet),:method => :delete, :confirm => "Are you sure?"%>
      </td>
      <td>
        <%= link_to "Edit", edit_tweet_path(tweet)%>
      </td>
    </tr>
  <% end%>
</table>

